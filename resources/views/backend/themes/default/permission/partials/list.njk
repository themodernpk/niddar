<table class="table table-bordered table-condensed">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Slug</th>
        <th>Enabled</th>
    </tr>
    </thead>
    <tbody>
    {% asyncEach item in list %}
    {% include "./item.njk" %}
    {% endeach %}
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        {% for pagination in data.pagination.range %}

            {% if pagination.isFirst %}
                <li><a href="?page={{ pagination.page }}">{{ pagination.label }}</a>
            {% elif pagination.isPrevious %}
                <li><a href="?page={{ pagination.page }}">{{ pagination.label }}</a>
            {% elif pagination.isCurrent %}
                <li class="active"><a href="?page={{ pagination.page }}" >{{ pagination.page }}</a>
            {% elif pagination.isNext %}
                <li><a href="?page={{ pagination.page }}" >{{ pagination.label }}</a>
            {% elif pagination.isLast %}
                <li><a href="?page={{ pagination.page }}" >{{ pagination.label }}</a>
            {% else %}
                <li><a href="?page={{ pagination.page }}">{{ pagination.page }}</a>
            {% endif %}

        {% endfor %}
    </ul>
</nav>
<hr/>
{{ data.pagi.template|safe }}
<hr/>
<hr/>
{{ data | json }}